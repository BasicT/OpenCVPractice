<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CropActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/take_pic_btn"
        android:text="选择图片"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crop_pic_btn"
        android:text="抠图"
        android:layout_toRightOf="@id/take_pic_btn"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/select_image"
        android:layout_below="@id/take_pic_btn"/>
    <com.example.opencvpractice.extra.MyCropView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myCropView"
        android:layout_below="@id/take_pic_btn"/>


</RelativeLayout>